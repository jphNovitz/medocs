{% extends 'base_back.html.twig' %}

{% block title %}{% trans %}Update my profile {% endtrans %}{% endblock %}

{% block header_h1 %} {% trans %}My profile {% endtrans %}{% endblock %}
{% block header_h1_icon %}
{% endblock %}
{% block body %}

    {{ form_start(form, {'attr': {
        'class': 'wfull',
        'style': 'width: 100%'
    }}) }}
    <section class="card bg-white wfull">
        <div class="horizontal-group bg-white auto-height margin-horizontal-2 radius-3">
            <div class="horizontal-item flow-column margin-horizontal-2">

                <div class="card-header">
                    <h2 class="title">Modifier mon adresse email</h2>
                </div>
                <div class="card-body">
                    <article class="horizontal-item bg-white auto-height margin-horizontal-2 radius-3 ">
                        <div class="form-row">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'value': app.user.email}) }}
                        </div>
                    </article>
                </div>

                <div class="card-header">
                    <h2 class="title">Modifier mon mot de passe</h2>
                </div>
                <div class="card-body flow-column">
                    <div class="form-row">
                        {{ form_label(form.oldPassword,  'Ancien mot de passe') }}
                        {{ form_widget(form.oldPassword) }}
                    </div>
                    <div class="form-row">
                        {{ form_label(form.plainPassword, 'Nouveau mot de passe') }}
                        {{ form_widget(form.plainPassword) }}
                    </div>
                    <div class="form-row">
                        {{ form_label(form.repeatPassword, 'Répétez le mot de passe') }}
                        {{ form_widget(form.repeatPassword) }}
                    </div>
                    <div class="form-row">
                        <input type="submit" class="btn auto-min bg-info text-info" value="modifier">
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>

            <div class="horizontal-item flow-column margin-horizontal-2">
                <div class="card-header">
                    <h2 class="title">Supprimer mon compte</h2>
                </div>
                <div class="card-body">
                    <article class="bg-white auto-height margin-v-1  ">

                        <div class="form-row">
                            <a href="{{ path('admin_profile_delete') }}"  class="btn auto-min bg-danger text-white size-1-1">
                                {% trans%}Delete {% endtrans%}
                            </a>
                        </div>
                    </article>
                </div>
            </div>


    </section>
{% endblock %}