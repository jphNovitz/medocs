{% extends 'base_back.html.twig' %}

{% block title %}Nouveau objet{% endblock %}

{% block header_h1 %} Objets {% endblock %}
{% block header_h1_icon %}
    <a href="{{ path('admin_' ~ object ~ '_index') }}"
       class="btn circle bg-primary-lighter border-primary inline"
       title="revenir Ã  la liste">

        <i class="material-icons">list</i>
    </a>
{% endblock %}
{% block body %}
    <section class="card wfull">
        <div class="card-header">
            <h3 class="title">{% block card_title %} Ajouter {% endblock %}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-row">
                {{ form_label(form.name, 'Nom') }}
                {{ form_widget(form.name) }}
            </div>
            {% block comment %}
                <div class="form-row">
                    {{ form_label(form.comment) }}
                    {{ form_widget(form.comment) }}
                </div>
            {% endblock %}
            <div class="form-row">
                {% block submit %} <input type="submit" class="btn auto-min bg-primary text-white"
                                          value="ajouter">{% endblock %}
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
