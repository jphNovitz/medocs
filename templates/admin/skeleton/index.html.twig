{% extends 'base_back.html.twig' %}



{% block title %} List{% endblock %}

{% block header_h1 %} H1 {% endblock %}
{% block header_h1_icon %}
    <a href="{{ path('admin_' ~ object ~ '_new') }}" class="bt bg-info text-info p06 radius-5p margin-horizontal-2 ">
        {#<i class="material-icons">add</i>#} {% trans %} Add {% endtrans %}
    </a>
{% endblock %}
{% block body %}

    <section class="card wfull">
        <div class="card-header">
            <h3 class="title">
                Liste des {% block card_title %}CARD TITLE {% endblock %} disponibles </h3>
        </div>
        <div class="card-body">
            {# list if exist #}
            {% if list is defined and list is not empty %}
                <ul class="vertical-list">
                    {% for item in list %}
                        <li class="list-item alternate">
                            {{ item.name }}
                            <div class="actions">
                                <a href="{{ path('admin_' ~ object ~ '_update', {'id': item.id}) }}"
                                   class="btn circle text-edit"><span class="material-icons-round">edit</span> </a>
                                <a href="{{ path('admin_' ~ object ~ '_delete', {'id': item.id}) }}"
                                   class="btn circle text-danger"><span class="material-icons-round">delete </span> </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>

            {% else %}

                <p>Aucun élément</p>
            {% endif %}
        </div>
    </section>
{% endblock %}
