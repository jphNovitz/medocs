<!DOCTYPE html>
<html lang="fr_BE">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> #}
    {% block seo %}
        <title>{% block title %}Comment mémoriser ma liste de médicaments{% endblock %}</title>
        <meta name="description"
              content="{% block description %}Encode les médicaments que tu dois prendre chaque jour ainsi que leur dosage et leur fréquence et transmet cette liste via email ou QR Code{% endblock %}"/>
        <meta property="og:description"
              content="{% block og_description %}Encode les médicaments que tu dois prendre chaque jour ainsi que leur dosage et leur fréquence et transmet cette liste via email ou QR Code{% endblock %}"/>
        <meta property="og:title"
              content="{% block og_title %}Comment mémoriser ma liste de médicaments{% endblock %}"/>
        <meta property="og:type" content="{% block og_type %}siteweb{% endblock %}"/>
        <meta property="og:locale" content="fr_BE"/>
        <meta property="og:url" content="{% block og_url %}https://medocs{% endblock %}"/>
        <meta property="og:image"
              content="{% block og_image %}https://medocs.be/build/images/Wavy_Med-logo_bg.47907079.png{% endblock %}"/>
        <meta property="og:site_name"
              content="{% block og_site_name %}Comment mémoriser ma liste de médicaments: Medocs.be{% endblock %}"/>
        {#        {% include '_template-parts/analytics.html.twig' %} #}
    {% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}

    {% endblock %}
</head>
<body class="bg-base-light text-content-primary-light dark:bg-base-dark dark:text-content-primary-dark">
<div class="w-full lg:max-w-screen-xl min-h-screen mx-auto px-4 py-8">

    {% for message in app.flashes('notice') %}
        <div class="alert alert-notice">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-error">
            {{ message }}
        </div>
    {% endfor %}
    <nav class="bg-surface-light dark:bg-surface-dark text-content-primary-light dark:text-content-primary-dark border-b border-base-light">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">

                <!-- Partie gauche : Logo + Accueil -->
                <div class="flex items-center space-x-6">
                    <!-- Logo/Nom du site - cliquable -->
                    <a href="{{ path('member_index') }}" class="flex items-center space-x-2  font-semibold text-xl hover:text-accent-light transition-colors">
                        <!-- Icône Home (lucide icons en SVG) -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                            <polyline points="9 22 9 12 15 12 15 22"/>
                        </svg>
                        <span>{% trans %}Mes medocs{% endtrans %}</span>
                    </a>

                    <!-- Lien Accueil explicite -->
                    <a href="{{ path('member_index') }}" class="hover:text-accent-light transition-colors text-sm font-medium">
                        Accueil
                    </a>
                </div>

                <!-- Lien profil -->
                <a href="{{ path('member_profile_update') }}" class="flex items-center space-x-2  hover:text-accent-light transition-colors px-4 py-2 rounded-lg hover:bg-base-light">
                    <!-- Icône User (lucide icons en SVG) -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                    <span class="hidden sm:inline">Mon profil</span>
                </a>

            </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

</div>

{% include '_template-parts/_footer.html.twig' %}
</body>

</html>
