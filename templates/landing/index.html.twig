{% extends 'base.html.twig' %}
{% block header %} {% endblock %}
{% block body %}
        <section class="bg-base-light dark:bg-base-dark">
            <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
                <div class="mr-auto place-self-center lg:col-span-7">
                    <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">{% trans %} hero.h1{% endtrans %}</h1>
                    <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">{% trans %} hero.p{% endtrans %}</p>
                    <a href="{{ path('app_register') }}"
                       class="inline-flex items-center justify-center px-5 py-3 mr-3 text-content-primary-light font-medium text-center rounded-lg bg-accent-light hover:bg-accent-light/80  dark:bg-accent-dark dark:hover:bg-accent-dark/80 focus:ring-4 focus:ring-pr dark:focus:ring-accent-light/30">
                        {% trans %} hero.button.primary{% endtrans %}
                        <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                  clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    <a href="{{ path('member_index') }}"
                       class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-content-primary-light/50 border border-content-primary-light/50 rounded-lg hover:bg-content-primary-light/10 focus:ring-4 focus:ring-content-primary-light/20 dark:text-white dark:border-content-primary-dark/70 dark:hover:bg-content-primary-dark/70 dark:focus:ring-content-primary-dark/80">
                        {% trans %} hero.button.secondary{% endtrans %}
                    </a>
                </div>
                <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
                    <img src="{{ asset('images/phone-medocs-mockup.webp') }}" alt="medocs.be">
                </div>
            </div>
        </section>

    <section class="bg-base-light dark:bg-base-dark py-16">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
            <div class="max-w-screen-lg text-content-primary-light/60 sm:text-lg dark:text-content-primary-dark/60">
                <h2 class="mb-4 text-4xl tracking-tight font-bold text-content-primary-light/90 dark:text-content-primary-dark/90">Pourquoi choisir <span class="font-extrabold">Medocs.be</span> ?</h2>
                <p class="mb-4 font-light"><span class="font-extrabold">Rapidité</span> : Inscription en une minute.</p>
                <p class="mb-4 font-light"><span class="font-extrabold">Partage Facile</span> : Envoyez vos listes par e-mail ou code QR.</p>
                <p class="mb-4 font-light"><span class="font-extrabold">Sécurité</span> : Partage sécurisé avec une URL anonyme</p>
                <p class="my-8 font-medium">Un email et un mot de passe suffisent pour commencer.</p>
                <a href="{{ path('app_register') }}" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-content-primary-light font-medium text-center rounded-lg bg-accent-light hover:bg-accent-light/80  dark:bg-accent-dark dark:hover:bg-accent-dark/80 focus:ring-4 focus:ring-pr dark:focus:ring-accent-light/30">
                    {{ 'button.cta.register'|trans }}
                    <svg class="ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                </a>
            </div>
        </div>
    </section>

{% endblock %}
